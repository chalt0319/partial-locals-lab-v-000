<%= form_tag(students_path, :method => "get") do %>
    <%= text_field_tag :search, params[:search], placeholder: "Search Students" %>
    <%= submit_tag "Search", :name => nil %>
<% end %>

<%if @students.empty?%>
  <p>There are no students that match: <%=params[:search]%></p>
<%else%>
  <ul>
  <%@students.each do |student|%>
    <li><%=student.name%></li>
  <%end%>
  </ul>
<%end%>

<%if params[:search]%>
<%=link_to("All Students", students_path)%>
<%end%>
